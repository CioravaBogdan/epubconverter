{
  "name": "PDF to EPUB Converter - WORKING VERSION",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "/convert-pdf-now",
        "options": {}
      },
      "id": "webhook-upload",
      "name": "Upload PDF",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [240, 300],
      "webhookId": "convert-pdf-upload"
    },
    {
      "parameters": {
        "url": "http://192.168.1.21:3000/api/convert/single",
        "sendBinaryData": true,
        "options": {
          "bodyContentType": "multipart-form-data",
          "timeout": 90000
        },
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "x-api-key",
              "value": "your-secret-api-key-here"
            }
          ]
        }
      },
      "id": "convert-api",
      "name": "Convert PDF to EPUB",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [460, 300]
    },
    {
      "parameters": {
        "respondWith": "allEntries",
        "options": {
          "responseHeaders": {
            "entries": [
              {
                "name": "Content-Disposition",
                "value": "attachment; filename=\"converted-book.epub\""
              },
              {
                "name": "Content-Type",
                "value": "application/epub+zip"
              }
            ]
          }
        }
      },
      "id": "download-epub",
      "name": "Download EPUB",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [680, 300]
    }
  ],
  "connections": {
    "Upload PDF": {
      "main": [
        [
          {
            "node": "Convert PDF to EPUB",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Convert PDF to EPUB": {
      "main": [
        [
          {
            "node": "Download EPUB",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false,
  "settings": {},
  "versionId": "working-v1"
}
